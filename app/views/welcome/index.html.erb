<nav class="navbar navbar-default">
  <ul class="nav navbar-nav">
    <li> <%= link_to "Log out", logout_path %></li>
  </ul>
</nav>
<div class="hero">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-body">
            <h1>
              <%= image_tag @user_presenter.profile_picture, class: "img-responsive" %><%= link_to @user_presenter.user.screen_name, "https://twitter.com/#{@user_presenter.user.screen_name}" %>
            </h1>
            <div class="row">
              <div class="col-md-12">
                <%= render partial: "tweets/tweet", collection: @user_presenter.feed %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-body">
            <h2>
              Post a tweet
            </h2>
              <%= bootstrap_form_for :tweet,   do |f|%>
                <%= f.text_area :text %>
                <%= f.submit "Post" %>
              <% end %>

          </div>
        </div>
      </div>
    </div>




  </div>
</div>
