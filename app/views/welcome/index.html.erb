<nav class="navbar navbar-default">
  <div class="navbar-header">
    <a class="navbar-brand" href="/">Yet Another Twitter Clone</a>
  </div>

  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-right">
      <li class=""> <%= link_to "Log out", logout_path %></li>
    </ul>
  </div>
</nav>
<div class="container-fluid">
  <div class="flash-row row text-center">
    <div class="flash-notice">
      <%= flash[:notice] %>
    </div>
  </div>
</div>
<div class="hero">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <div class="panel-body">
                  <h1>
                    <%= link_to @user_presenter.user.name, "https://twitter.com/#{@user_presenter.user.screen_name}" %>
                  </h1>
                  <h6>(@<%= @user_presenter.user.screen_name %>)</h6>
                </div>
              </div>
            </div>
            <div class="row flex-row">
              <div class="col-md-3">
                <div class="panel-body avatar-area">
                  <%= image_tag @user_presenter.profile_picture, class: "img-responsive col-centered" %>
                </div>
              </div>
              <div class="col-md-9 stats-row">
                <div class="panel-body">
                  <div class="row">
                    <div class="col-md-3">
                      Tweets:<br>
                      <h4> <%= @user_presenter.user.tweets_count %></h4>
                    </div>
                    <div class="col-md-3">
                      Following:<br>
                      <h4> <%= @user_presenter.user.following_count %></h4>
                    </div>
                    <div class="col-md-3">
                      Followers:<br>
                      <h4> <%= @user_presenter.user.followers_count %></h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-md-12">
                <%= render partial: "tweets/tweet", collection: @user_presenter.feed %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-default">
              <div class="panel-body">
                <h2>
                  Post a tweet
                </h2>
                <%= bootstrap_form_for :tweet, url: new_tweet_path  do |f|%>
                <%= f.text_area :text, maxlength: 140, size: 40  %>
                <div class="col-md-5 col-centered"><%= f.submit "Post", class: "btn btn-primary col-md-12" %></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-6">
                    location:<br>
                    <h4><%= @user_presenter.user.location %></h4>
                  </div>
                  <div class="col-md-6">
                    website:<br>
                    <h4><%= link_to @user_presenter.user.website %></h4>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-md-6">
                    <h3>Following:</h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>




  </div>
</div>
